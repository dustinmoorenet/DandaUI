button
  position relative
  border 1px solid element_border
  background element_bg_active
  height element_height
  line-height element_height
  color base_color
  font-size 10px
  margin 5px
  padding 0px 7px
  border-radius 3px

  &[disabled]
    background element_bg_inactive
    color inactive_color

  &.active
    background lighten(element_bg_active, 10%)

  &:focus
    box-shadow 0px 0px 2px 1px lighten(element_border, 30%)
    outline none

  &.icon
    padding-right 30px
    
    &:before
      position: absolute
      top: 7px
      right: 7px
      font-size: 16px
