.modal
  display table
  background rgba(0,0,0,0.5)
  position absolute
  top 0
  left 0
  width 100%
  height 100%

  .wrapper
    display table-cell
    text-align center
    vertical-align middle

    .content
      display inline-block
      min-width 400px
      min-height 200px
      background modal_background
      border 1px solid panel_border
      border-radius 3px
